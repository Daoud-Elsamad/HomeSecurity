<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Icon, Title and Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Sensor Icon -->
            <LinearLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/sensor_icon_background"
                android:gravity="center">
                
                <ImageView
                    android:id="@+id/sensorIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_door_sensor"
                    app:tint="#4F46E5"/>
            </LinearLayout>

            <!-- Title and Subtitle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/sensorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Door"
                    android:textSize="18sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/sensorType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Door Sensor"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Toggle Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/enableSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="#FFFFFF"
                app:trackTint="#4F46E5"
                app:trackTintMode="src_in"/>
        </LinearLayout>

        <!-- Status and Enable Text Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <!-- Status Badge -->
            <TextView
                android:id="@+id/sensorStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"
                android:textSize="12sp"
                android:textColor="#059669"
                android:background="@drawable/status_badge_green"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Enable Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable"
                android:textSize="14sp"
                android:textColor="#6B7280"/>
        </LinearLayout>

        <!-- Sensor Value (for non-door sensors) -->
        <TextView
            android:id="@+id/sensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <!-- Door Control Buttons -->
        <LinearLayout
            android:id="@+id/doorControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Lock Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/lockButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ”’ Lock"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#059669"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button"/>

            <!-- Unlock Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/unlockButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ”“ Unlock"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:backgroundTint="#E5E7EB"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp"
                style="@style/Widget.Material3.Button"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 