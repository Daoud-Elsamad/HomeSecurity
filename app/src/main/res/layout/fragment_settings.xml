<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sensor Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sensorSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_sensor"
                        app:tint="@color/primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sensor Settings"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/sensorSettingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sensorSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <!-- Gas Threshold -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gas Threshold (ppm)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/gasThresholdSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="200"
                        android:valueTo="1000"
                        android:stepSize="50"
                        app:thumbColor="@color/primary"
                        app:trackColorActive="@color/primary"
                        app:trackColorInactive="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/gasThresholdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: 400 ppm"
                        android:textColor="@color/text_secondary"/>

                    <!-- Vibration Sensitivity -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Vibration Sensitivity"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/vibrationSensitivitySlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="1"
                        android:valueTo="20"
                        android:stepSize="1"
                        app:thumbColor="@color/primary"
                        app:trackColorActive="@color/primary"
                        app:trackColorInactive="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/vibrationSensitivityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: 8"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Notification Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/notificationSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notification Settings"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/notificationSettingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/notificationSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/notificationSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Notifications"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Admin Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/adminSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_admin"
                        app:tint="@color/primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin Settings"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/adminSettingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adminSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <!-- Add User Section -->
                    <LinearLayout
                        android:id="@+id/addUserSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/ripple_bg"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_add_user"
                                app:tint="@color/primary"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add New User"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:id="@+id/addUserArrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="@color/text_secondary"/>
                        </LinearLayout>

                        <!-- Add User Form - Initially Hidden -->
                        <LinearLayout
                            android:id="@+id/addUserFormContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="32dp"
                            android:paddingEnd="8dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/usernameLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Username"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_marginBottom="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/usernameInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textSize="14sp"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/passwordLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Password"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_marginBottom="8dp"
                                app:endIconMode="password_toggle">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/passwordInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:textSize="14sp"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/adminCheckbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Admin User"
                                android:textSize="14sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="4dp"
                                android:layout_marginBottom="8dp"/>

                            <Button
                                android:id="@+id/addUserButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ADD USER"
                                android:textSize="12sp"
                                android:paddingHorizontal="16dp"
                                android:layout_gravity="end"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.MaterialComponents.Button"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="8dp"/>

                    <!-- Manage Users Section -->
                    <LinearLayout
                        android:id="@+id/manageUsersSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/ripple_bg"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_users"
                                app:tint="@color/primary"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Manage Users"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:id="@+id/manageUsersArrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="@color/text_secondary"/>
                        </LinearLayout>

                        <!-- Manage Users Content - Initially Hidden -->
                        <LinearLayout
                            android:id="@+id/manageUsersContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="32dp"
                            android:paddingEnd="8dp">

                            <TextView
                                android:id="@+id/emptyUsersMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No users found. Add a user to get started."
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="center"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/usersRecyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:clipToPadding="false"
                                android:minHeight="100dp"
                                android:maxHeight="200dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                tools:listitem="@layout/item_user"
                                tools:itemCount="3"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginVertical="8dp"/>

                    <!-- User Permissions Section -->
                    <LinearLayout
                        android:id="@+id/userPermissionsSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/ripple_bg"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingVertical="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_permissions"
                                app:tint="@color/primary"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="User Permissions"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"/>

                            <ImageView
                                android:id="@+id/userPermissionsArrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="@color/text_secondary"/>
                        </LinearLayout>

                        <!-- User Permissions Form - Initially Hidden -->
                        <LinearLayout
                            android:id="@+id/userPermissionsContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="32dp"
                            android:paddingEnd="8dp">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/viewLogsPermission"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="View Activity Logs"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="1dp"/>

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/manageSensorsPermission"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Manage Sensors"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="1dp"/>

                            <com.google.android.material.checkbox.MaterialCheckBox
                                android:id="@+id/manageUsersPermission"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Manage Users"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="8dp"/>

                            <Button
                                android:id="@+id/savePermissionsButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SAVE"
                                android:textSize="12sp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="16dp"
                                android:layout_gravity="end"
                                android:layout_marginBottom="8dp"
                                style="@style/Widget.MaterialComponents.Button"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView> 