<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sensor Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sensorSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_sensor"
                        app:tint="@color/primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sensor Settings"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/sensorSettingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sensorSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <!-- Gas Threshold -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gas Threshold (ppm)"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/gasThresholdSlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="200"
                        android:valueTo="1000"
                        android:stepSize="50"
                        app:thumbColor="@color/primary"
                        app:trackColorActive="@color/primary"
                        app:trackColorInactive="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/gasThresholdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: 400 ppm"
                        android:textColor="@color/text_secondary"/>

                    <!-- Vibration Sensitivity -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="Vibration Sensitivity"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"/>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/vibrationSensitivitySlider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:valueFrom="1"
                        android:valueTo="20"
                        android:stepSize="1"
                        app:thumbColor="@color/primary"
                        app:trackColorActive="@color/primary"
                        app:trackColorInactive="@color/text_secondary"/>

                    <TextView
                        android:id="@+id/vibrationSensitivityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current: 8"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Notification Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/notificationSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="@color/primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notification Settings"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/notificationSettingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/notificationSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/notificationSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Notifications"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Admin Settings -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/adminSettingsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_admin"
                        app:tint="@color/primary"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Admin Settings"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/adminSettingsArrow"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adminSettingsContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/addUserButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add New User"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button"/>

                    <Button
                        android:id="@+id/manageUsersButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Users"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button"/>

                    <Button
                        android:id="@+id/userPermissionsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User Permissions"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView> 